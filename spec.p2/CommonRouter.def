//===== Neighbor Advertisement

// NA; Link-Local to Link-Local
FEM_icmp6_na(
	na_l2l_link1,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		HopLimit = 255;
	},
	{
		RFlag = IS_ROUTER_LINK1;
		SFlag = 1;
		OFlag = 1;
		TargetAddress = tnv6();
		option = _TLLOPT_tn;
	}
)

