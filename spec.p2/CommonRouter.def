//===== Neighbor Advertisement

// NA; Link-Local
FEM_icmp6_na(
	cleanup_na_1,
	_HETHER_tn2allnodes,
	{
		_SRC(tnv6());
		_DST(v6(_ALLNODES_MCAST_ADDR));
		HopLimit = 255;
	},
	{
		RFlag = IS_ROUTER_LINK1;
		SFlag = 0;
		OFlag = 1;
		TargetAddress = tnv6();
		option = DifferentLLA_1;
	}
)

