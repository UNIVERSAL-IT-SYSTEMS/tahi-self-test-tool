#define XXX_HAS_ONE_INTERFACES

#include "./CommonRouter.def"
#include "../AdvancedFunctionality.def"

//
// ICMP echo request
//

FEM_icmp6_echo_request(
	echo_request,
	_HETHER_tn2nut,
	{
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
		TrafficClass = 0x20;
		HopLimit = 255;
	},
	{
		payload = echo_data8;
	}
)

#if HAS_MULTIPLE_INTERFACES != 0
FEM_icmp6_echo_request(
	echo_request_f_tc,
	_HETHER_nut2tn,
	{
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
		TrafficClass = within(1, 255);
	},
	{
		payload = echo_data8;
	}
)

FEM_icmp6_echo_request(
	echo_request_f,
	_HETHER_nut2tn,
	{
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
		TrafficClass = 0;
	},
	{
		payload = echo_data8;
	}
)
#else	// HAS_MULTIPLE_INTERFACES
#ifndef _GLOBAL10_UCAST_PRFXLEN
#define _GLOBAL10_UCAST_PRFXLEN	64
#endif	// _GLOBAL10_UCAST_PRFXLEN

FEM_hdr_ipv6_exth(
	echo_request_f_tc,
	_HETHER_nut2tn,
	{
		_SRC(nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN));
		_DST(tn2v6(_GLOBAL10_UCAST_PRFX, _GLOBAL10_UCAST_PRFXLEN));
	},
	{
		header	= _HDR_IPV6_NAME(echo_request_f_tc);
		upper	= _PACKET_IPV6_NAME(echo_request_f_tc_inner);
	}
)

FEM_icmp6_echo_request(
	echo_request_f_tc_inner,
	_HETHER_nut2tn,
	{
		TrafficClass	= within(1, 255);
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
	},
	{
		payload	= echo_data8;
	}
)

FEM_hdr_ipv6_exth(
	echo_request_f,
	_HETHER_nut2tn,
	{
		_SRC(nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN));
		_DST(tn2v6(_GLOBAL10_UCAST_PRFX, _GLOBAL10_UCAST_PRFXLEN));
	},
	{
		header	= _HDR_IPV6_NAME(echo_request_f);
		upper	= _PACKET_IPV6_NAME(echo_request_f_inner);
	}
)

FEM_icmp6_echo_request(
	echo_request_f_inner,
	_HETHER_nut2tn,
	{
		TrafficClass	= 0;
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
	},
	{
		payload	= echo_data8;
	}
)
#endif	// HAS_MULTIPLE_INTERFACES
//----------------------------------------------------------------------
// Payload Data
//----------------------------------------------------------------------

Payload echo_data8 {
	data = {1, 2, 3, 4, 5, 6, 7, 8};
}
