//======================================================================
//
// Type11
//

Hdr_HopByHop opt_Type11 {
	option = _Type11;
}

Opt_ANY _Type11 {
	OptionType = 0xc7;
	data = {0, 0, 0, 0};
}


//----------------------------------------------------------------------
// Payload Data
//----------------------------------------------------------------------

Payload echo_data8 {
	data = {1, 2, 3, 4, 5, 6, 7, 8};
}


