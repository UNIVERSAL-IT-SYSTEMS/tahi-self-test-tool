#include "icmp.def"
#include "../AdvancedFunctionality.def"

#define UNKNOWN_ADDR v6merge(_GLOBAL1_UCAST_PRFX, 64, v6("::777"))

FEM_icmp6_parameter_problem(
    parameter_problem,
	_HETHER_tn2nut,
	{
		_SRC(TN_GLOBAL);
		_DST(UNKNOWN_ADDR);
		HopLimit = 0;
	},
	{
		Code = 0;	// erroneous header field encounted
		Pointer = 4;	// Pointer to Payload Length
		payload = ping_data1232;
	}
)

//----------------------------------------------------------------------
// payload  data
//----------------------------------------------------------------------
Payload ping_data1232 {
	data = repeat(0xff,1232);
}



//----------------------------------------------------------------------
// Time Exceeded
//----------------------------------------------------------------------

#define NUT_GLOBAL_LINK1 v6merge(_GLOBAL1_UCAST_PRFX, \
	_GLOBAL1_UCAST_PRFXLEN, nutv6("Link1"))
#if HAS_MULTIPLE_INTERFACES != 0
#define NUT_ONEOF_ADDR oneof(NUT_GLOBAL, nutv6(), NUT_GLOBAL_LINK1)
#else	// HAS_MULTIPLE_INTERFACES
#define NUT_ONEOF_ADDR oneof(NUT_GLOBAL, nutv6())
#endif	// HAS_MULTIPLE_INTERFACES

// ICMP error from NUT
FEM_icmp6_time_exceeded(
	time_exceeded,
	_HETHER_nut2tn,
	{
		_SRC(NUT_ONEOF_ADDR);
		_DST(oneof(TN_GLOBAL, tnv6()));
	},
	{
		Code = 0;       
		payload = any;
	}
)
