// Echo Request
// Link-local address
//----------------------------------------------------------------------

FEM_icmp6_echo_request(
	echo_request_link_local,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		payload = ping_data;
	}
)  

