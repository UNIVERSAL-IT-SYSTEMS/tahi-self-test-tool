if($V6evalTool::NutDef{'Type'} ne 'host') {
	exitRouterOnly($Link0);
	#NOTREACHED
}

vCapture($Link0);

$pktdesc{'local_ra'}
	= '    Send RA w/ SLL (Invalid Checksum): '.
		'TR1 (link-local) -&gt; all-nodes multicast address';

unless(v6LC_2_2_11_B_C_D_E_F($Link0)) {
        exitFail($Link0);
        #NOTREACHED
}

exitPass($Link0);
#NOTREACHED



