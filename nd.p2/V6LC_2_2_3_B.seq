if($V6evalTool::NutDef{'Type'} ne 'host') {
	exitRouterOnly($Link0);
	#NOTREACHED
}

vCapture($Link0);

$pktdesc{'local_rs'}
	= '    Send RS w/ SLL: '.
		'TN1 (link-local) -&gt; all-nodes multicast address';

unless(v6LC_2_2_3($Link0)) {
        exitFail($Link0);
        #NOTREACHED
}

exitPass($Link0);
#NOTREACHED



