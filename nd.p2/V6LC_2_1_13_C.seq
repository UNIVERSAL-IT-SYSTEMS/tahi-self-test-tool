use nd;

BEGIN {}
END   {}

my $ereq = 'ndisc_ereq_LL';

startNdiscWorld($Link0);

vLogHTML('<FONT COLOR="#FF0000" SIZE="5"><U><B>Procedure'.
		 '</B></U></FONT><BR>');

#----------------------------------------------------------------------
# Send Echo Request and NA
#----------------------------------------------------------------------
if(ndiscNone2ProbeWithNS($Link0, $ereq) < 0) {
	$NEED_COMMON_CLEANUP = 1;
	$tn1_cache = 1;
	exitFail();
	#NOTREACHED
}

#----------------------------------------------------------------------
# Send NS
#----------------------------------------------------------------------
my @na = ndSetNa4mcastNs();

if(ndRecvNsProbe2ProbeWithEchoRequest($Link0, 'nd_mcast_ns_sll', \@na) < 0) {
	$NEED_COMMON_CLEANUP = 1;
	$tn1_cache = 1;
	exitFail();
	#NOTREACHED
}

exitPass();
#NOTREACHED



