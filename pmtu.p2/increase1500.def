#define	IS_ROUTER_LINK0		1

#include "./CommonHost.def"


#ifndef	FRAG_ID
#define	FRAG_ID	any
#endif

#ifdef FRAG_DEF
#include "pkt_frag.def"
#endif


//for Packt Too Big 
#ifndef MAX_MTU
#define MAX_MTU 1304
#endif

#ifndef PAYLOAD
#define PAYLOAD _PACKET_IPV6_NAME(echo_request1500)
#endif
//
// ICMP echo request
//

FEM_icmp6_echo_request(
	echo_request1500,
	_HETHER_tn2nut,
	{
		_SRC(TN2_GL2_ADDR);
		_DST(NUT_GL0_ADDR);
		HopLimit = 255;
	},
	{
		Identifier = PING_ID;
		SequenceNumber = PING_SN;
		payload = echo_data_1452;
	}
)


//
// ICMP echo reply
//

FEM_icmp6_echo_reply(
	echo_reply1500,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL0_ADDR);
		_DST(TN2_GL2_ADDR);
	},
	{
		Identifier = PING_ID;
		SequenceNumber = PING_SN;
		payload = echo_data_1452;
	}
)


//
// Payload Data
//

Payload echo_data_1452 {
	data = repeat(0x00, 1232);
	data = repeat(0x01, 220);
}


//
// ICMPv6 Packet Too Big message
//

FEM_icmp6_packet_too_big(
	PktTooBig1304,
	_HETHER_tn2nut,
	{
		_SRC(TR1_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
	},
	{
		MTU = MAX_MTU;
		payload = TooBigData1500;
	}
) 

FEM_icmp6_packet_too_big(
	PktTooBig1500,
	_HETHER_tn2nut,
	{
		_SRC(TR1_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
	},
	{
		MTU = 1500;
		payload = TooBigData1304;
	}
) 


Payload TooBigData1500 {
	data = substr(PAYLOAD, 0, 1232);
}

Payload TooBigData1304 {
	data = substr(PAYLOAD, 0, 1232);
}


